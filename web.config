<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Enable WebSockets -->
    <webSocket enabled="true" />

    <!-- IISNode handler -->
    <handlers>
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- URL Rewrite - send everything to Node.js -->
    <rewrite>
      <rules>
        <rule name="NodeApp">
          <match url=".*" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Pass errors to Node.js -->
    <httpErrors existingResponse="PassThrough" />

    <!-- IISNode settings -->
    <iisnode
      loggingEnabled="true"
      devErrorsEnabled="true"
      nodeProcessCommandLine="node.exe"
    />

  </system.webServer>
</configuration>