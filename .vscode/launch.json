{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch NBA API Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/dist/index.js",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug NBA API Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/dist/index.js",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}